<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.Views.Registration"
             Title="Registration Page">

    <StackLayout Padding="20" >
        <StackLayout Padding="30">
            <Label x:Name="Lbl_RegisterUsername" Text="Username"/>
        <Entry x:Name="Entry_UsernameRegistered" Placeholder="New Username"/>
        <Label x:Name="Lbl_RegisterPassword" Text="Password"/>
        <Entry x:Name="Entry_PasswordRegistered" Placeholder="Your Password"/>
        <Button x:Name="Btn_Register" Text="Register" Clicked="RegistrationProcedure"/>
        </StackLayout>
     <StackLayout Padding="30">
        <Image Source="dogicon.png"/>
    </StackLayout>   
    </StackLayout>
    
</ContentPage>